{
    "$schema" : "../.vscode/schemas/flatpak-manifest.schema.json",
    "id" : "io.github.andrepg.Doit.Devel",
    "tags" : [
        "tasks",
        "todo",
        "task management"
    ],
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node24",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command" : "io.github.andrepg.Doit",
    "finish-args" : [
        "--device=dri",
        "--socket=wayland",
        "--env=DEVELOPMENT=true",
        "--env=LC_ALL=pt_BR.UTF-8"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node24/bin",
        "build-args": [
            "-Ddevelopment=false"
        ]
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "Doit",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../"
                }
            ],
            "config-opts" : [
                "--libdir=lib",
                "-Ddevelopment=true"
            ]
        }
    ]
}
