{
    "$schema": "../.vscode/schemas/flatpak-manifest.schema.json",
    "id" : "io.github.andrepg.Doit",
    "tags" : [
        "tasks",
        "todo",
        "task management"
    ],
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node24",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command" : "io.github.andrepg.Doit",
    "finish-args" : [
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node24/bin"
    },    
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "Doit",
            "buildsystem" : "meson",
            "builddir" : true,            
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://github.com/andrepg/do-it/archive/refs/tags/v0.1.3.zip",
                    "sha256": "f49fda64048b469d53224c181b1f1ef3b1caad96ad99833b44f3c73817ebf15f",
                    "strip-components": 1,

                    "x-checker-data": {
                        "type": "github",
                        "owner": "andrepg",
                        "repo": "do-it",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "config-opts" : [
                "--libdir=lib",
                "-Ddevelopment=false"
            ],
            "build-options": {
                "config-opts": [
                    "-Ddevelopment=false"
                ]
            }
        }
    ]
}
