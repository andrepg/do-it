{
    "$schema": "../.vscode/schemas/flatpak-manifest.schema.json",
    "id" : "io.github.andrepg.Doit",
    "tags" : [
        "tasks",
        "todo",
        "task management"
    ],
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node24",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command" : "io.github.andrepg.Doit",
    "finish-args" : [
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node24/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "Doit",
            "buildsystem" : "meson",
            "builddir" : true,            
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://github.com/andrepg/do-it/archive/refs/tags/v0.1.1.zip",
                    "sha256": "0f866154e73544b44606b60ce4e1d84a7beb1ec55939e39fb02127759e8ed939",

                    "x-checker-data": {
                        "type": "github",
                        "owner": "andrepg",
                        "repo": "do-it",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "config-opts" : [
                "--libdir=lib",
                "-Ddevelopment=false"
            ]
        }
    ]
}
