<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.1 -->
<interface>
  <!-- interface-name window.ui -->
  <requires lib="Adw" version="1.0"/>
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.7"/>
  <template class="TasksWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <property name="hexpand">True</property>
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
                <property name="primary">True</property>
                <property name="tooltip-text" translatable="yes">Main Menu</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="button_new_task">
                <property name="icon-name">value-increase-symbolic</property>
                <property name="tooltip-text">Add new task</property>
              </object>
            </child>
          </object>
        </child>
        <child type="bottom">
          <object class="GtkActionBar">
            <property name="hexpand">True</property>
            <property name="hexpand-set">True</property>
            <property name="valign">end</property>
            <child type="center">
              <object class="GtkEntry" id="task_new_entry">
                <property name="enable-emoji-completion">True</property>
                <property name="hexpand">True</property>
                <property name="margin-bottom">4</property>
                <property name="margin-top">4</property>
                <property name="placeholder-text">What do you need to do?</property>
                <property name="show-emoji-icon">True</property>
                <property name="truncate-multiline">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="main_window">
            <property name="min-content-height">200</property>
            <child>
              <object class="AdwToastOverlay" id="toast_overlay">
                <child>
                  <object class="GtkFlowBox" id="list_flow_box">
                    <property name="margin-top">12</property>
                    <property name="max-children-per-line">1</property>
                    <property name="row-spacing">16</property>
                    <property name="selection-mode">none</property>
                    <property name="valign">start</property>
                    <child>
                      
                    </child>                    
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">600</property>
    <property name="default-width">440</property>
    <property name="title" translatable="yes">Tasks</property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">_Preferences</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">win.show-help-overlay</attribute>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      </item>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About Tasks</attribute>
      </item>
    </section>
  </menu>
</interface>
