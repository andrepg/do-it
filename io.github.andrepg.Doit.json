{
    "$schema": "./.vscode/schemas/flatpak-manifest.schema.json",
    "id" : "io.github.andrepg.Doit",
    "tags" : [
        "tasks",
        "todo",
        "task management"
    ],
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node20",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command" : "io.github.andrepg.Doit",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node20/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "Doit",
            "buildsystem" : "meson",
            "builddir" : true,            
            "sources" : [
                {
                    "type" : "git",
                    "path" : "https://github.com/andrepg/do-it.git",
                    "tag": "v0.1.1",
                    "commit": "e6d12b0d8916c0d06c55f8daecdb741843e0c0c5",
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
